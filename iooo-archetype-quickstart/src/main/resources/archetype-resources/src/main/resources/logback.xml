#set( $symbol_pound = '#' )
#set( $symbol_dollar = '$' )
#set( $symbol_escape = '\' )
<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" debug="false">

  <include resource="logging/logback/base.xml"/>

  <!--LOGGERS-->

  <logger name="io.netty" level="INFO"/>
  <logger name="tech.iooo.boot" level="${symbol_pound}logback.level${symbol_pound}"/>
  <logger name="${package}" level="${symbol_pound}logback.level${symbol_pound}"/>

  <!--/LOGGERS-->

  <root level="INFO">
    <!--CONSOLE-->
    <appender-ref ref="STDOUT"/>
    <!--ROLLING FILE-->
    <appender-ref ref="ASYNC"/>
  </root>

</configuration>
